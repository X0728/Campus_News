<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".News.PublishFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/theme_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="170dp"/>
        <ImageView
            android:id="@+id/publish"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/publish_white"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="right"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="给有趣的事起个名字吧~"
        android:maxLength="30"
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_monitor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(0/30)"
        android:gravity="end"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="在这里写下有趣的事~"
        android:maxLines="10"
        android:singleLine="false"
        android:maxLength="300"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_monitor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(0/300)"
        android:gravity="end"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签:"
            android:textColor="@color/gray"/>
        <CheckBox
            android:id="@+id/animal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:button="@null"
            android:text="#人才招聘"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/check_box_style"/>
        <CheckBox
            android:id="@+id/travel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:button="@null"
            android:text="#竞赛"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/check_box_style"/>
        <CheckBox
            android:id="@+id/political"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:button="@null"
            android:text="#时政"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/check_box_style"/>
        <CheckBox
            android:id="@+id/campus"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:button="@null"
            android:text="#学术讲座"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/check_box_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/customize"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="自定义标签"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#2C40F3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/add_picture"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(长按删除图片)"
        android:paddingLeft="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>